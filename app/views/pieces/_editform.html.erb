<h2>Edit piece</h2>
<%= form_for @piece do |f|%>
    <div class="form-group">
        <label>Title:</label>
        <%= f.text_field :title, class: "form-control form-control-sm" %>
    </div>
    <div class="form-group">
        <label>Artist: </label>
        <%= f.text_field :artist, class: "form-control form-control-sm" %>
    </div>
    <div class="form-group">
        <label>Type: </label>
        <%= f.select(:marker_type, ['Mural','Tag','Heaven','Paste-Up', 'Stencil'], {}, {class: "form-control form-control-sm"}) %>
    </div>
    <div class="form-group">
        <label>Photo: </label><br>
        <%= f.file_field :photo %>
    </div>
    <%= f.button :Submit, onclick: "showLoad()", class: "btn btn-dark" %>
<% end %>
<div class="spinner" style="display: none">
  <div class="rect1"></div>
  <div class="rect2"></div>
  <div class="rect3"></div>
  <div class="rect4"></div>
  <div class="rect5"></div>
</div>

<script>
    function showLoad() {
        var spinner = document.getElementsByClassName('spinner')
        spinner[0].style.display = "inline-block";
    }
</script>