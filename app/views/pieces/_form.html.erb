<h2>Add new piece</h2>
<%= form_with model: Piece.new, local: true do |form| %>
    <div class="form-group">
        <label>Lat: </label>
        <%= form.number_field :lat, placeholder: "Lat", step: :any, :id => 'lat', class: "form-control form-control-sm"%>
    </div>
    <div class="form-group">
        <label>Lng: </label>
        <%= form.number_field :lng, placeholder: "Lng", step: :any, :id => 'lng', class: "form-control form-control-sm"%>
    </div>
    <div class="form-group">
        <label>Address: </label>
        <%= form.text_field :address, placeholder: "Address", :id => 'address', class: "form-control form-control-sm"%>
    </div>
    <div class="form-group">
        <label>Title: </label>
        <%= form.text_field :title, placeholder: "Piece title", class: "form-control form-control-sm"%>
    </div>
    <div class="form-group">
        <label>Artist: </label>
        <%= form.text_field :artist, placeholder: "Artist", class: "form-control form-control-sm"%>
    </div>
    <div class="form-group">
        <label>Type: </label>
        <%= form.select(:marker_type, ['Mural','Tag','Heaven','Paste-Up', 'Stencil'], {}, {class: "form-control form-control-sm"}) %>
    </div>
    <div class="form-group">
        <label>Attach Photo: </label>
        <%= form.file_field :photo %>
    </div>
    <%= form.submit "Submit", :id=>'pieces', onclick: "showLoad()", class: "btn btn-dark" %>
<% end %>
<div class="spinner" style="display: none">
  <div class="rect1"></div>
  <div class="rect2"></div>
  <div class="rect3"></div>
  <div class="rect4"></div>
  <div class="rect5"></div>
</div>

<script>
    function showLoad() {
        var spinner = document.getElementsByClassName('spinner')
        spinner[0].style.display = "inline-block";
    }
</script>